        </dx:PivotOlapDataSource>
    </UserControl.Resources>
    <dxpg:PivotGridControl x:Name="pivot" x:FieldModifier="public" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="364" OlapDataProvider="OleDb" FieldAreaChanged="pivot_FieldAreaChanged" ShowRowGrandTotals="False" ShowColumnGrandTotals="False" ShowColumnGrandTotalHeader="False" ShowRowGrandTotalHeader="False" ChartAutoTranspose="True" FieldListLayout="StackedSideBySide" FieldAreaIndexChanged="pivot_FieldAreaIndexChanged" FieldValueExpanded="pivot_FieldValueExpanded" AllowConditionalFormattingMenu="True" ShowRowTotals="False" ShowTotalsForSingleValues="False" ShowFilterHeaders="False" ShowDataHeaders="False" ShowColumnTotals="False" GroupFieldsInFieldList="True" FieldListIncludeVisibleFields="True" RowTotalsLocation="Far">
