            <Binding Path="ConnectionString" Source="{StaticResource PivotOlapDataSource}"/>
        </dxpg:PivotGridControl.OlapConnectionString>
        <dxpg:PivotGridControl.FormatConditions>
            <dxpg:ColorScaleFormatCondition ApplyToSpecificLevel="True" ColumnName="kelas" MeasureName="persentasi" RowName="produk">
                <dx:ColorScaleFormat ColorMin="White" ColorMax="#FF00E000" ColorMiddle="#FFFAFA6E"/>
            </dxpg:ColorScaleFormatCondition>

        </dxpg:PivotGridControl.FormatConditions>
        <dxpg:PivotGridControl.Fields>
            <dxpg:PivotGridField x:Name="produk" Area="RowArea" Caption="Nama Produk" FieldName="[Fmt Populer Produk1].[Hierarchy 1].[Nama Produk]" AreaIndex="0" ShowCustomTotals="False" ShowTotals="False" ShowGrandTotal="False"/>
            <dxpg:PivotGridField x:Name="tahun"  Area="ColumnArea" Caption="Tahun" FieldName="[Fmt Populer Produk1].[Hierarchy 2].[Tahun]" AreaIndex="0"/>
            <dxpg:PivotGridField x:Name="kelas" Area="ColumnArea" Caption="Klasifikasi" FieldName="[Fmt Populer Produk1].[Hierarchy].[Ca Populer Produk]" AreaIndex="1"/>
            <dxpg:PivotGridField x:Name="persentasi" Area="DataArea" Caption="Kepopuleran" FieldName="[Measures].[avg_mda]" CellFormat="p2" ShowTotals="False" AreaIndex="0" TopValueType="Percent" />
        </dxpg:PivotGridControl.Fields>

    </dxpg:PivotGridControl>
</UserControl>